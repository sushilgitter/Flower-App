<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flowery">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flowery"
        tools:targetApi="31">
        <activity
            android:name=".CartItems"
            android:exported="false"
            android:label="@string/title_activity_cart_items"
            android:theme="@style/Theme.Flowery"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".PaymentMethodScreen"
            android:exported="false"
            android:label="@string/title_activity_payment_method_screen"
            android:theme="@style/Theme.Flowery"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".CheckoutScreen"
            android:exported="false"
            android:label="@string/title_activity_checkout_screen"
            android:theme="@style/Theme.Flowery"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ItemDetails"
            android:exported="false"
            android:label="@string/title_activity_item_details"
            android:theme="@style/Theme.Flowery" />
        <activity
            android:name=".PopularItemScreen"
            android:exported="false"
            android:label="@string/title_activity_popular_item_screen"
            android:theme="@style/Theme.Flowery" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.Flowery" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Flowery"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>